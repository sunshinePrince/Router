<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.fengjr.sample.activities.MainActivity">

        <TextView
            android:id="@+id/tv_config"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/config_default"/>


        <Button
            android:id="@+id/bt_openPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onOpenPhotosClick"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/open_photos"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/bt_userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:onClick="onUserInfoClick"
            android:text="@string/to_userinfo"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/bt_userInfoSticky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:onClick="onUserInfoStickyClick"
            android:text="@string/to_userinfo_sticky"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/bt_productionList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:onClick="onProListClick"
            android:text="@string/to_production_list"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/bt_trade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:onClick="onTradeClick"
            android:text="@string/to_trade"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/bt_startActivities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:onClick="onStartActivitiesClick"
            android:text="@string/start_activities"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/bt_h5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:onClick="onH5Click"
            android:text="@string/h5"
            android:textSize="16sp"/>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
