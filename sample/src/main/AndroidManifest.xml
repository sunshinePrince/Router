<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.sunny.sample"
          xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="com.sunny.sample.App"
        android:theme="@style/AppTheme">
        <activity android:name="com.sunny.sample.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.sunny.sample.activities.BrowserActivity"/>
        <activity android:name="com.sunny.sample.activities.user.LoginActivity"/>
        <activity android:name="com.sunny.sample.activities.user.RegisterActivity"/>
        <activity android:name="com.sunny.sample.activities.user.UserInfoActivity"/>
        <activity android:name="com.sunny.sample.activities.user.TopUpActivity"/>
        <activity android:name="com.sunny.sample.activities.production.ProductionActivity"/>
        <activity android:name="com.sunny.sample.activities.production.ProductionListActivity"/>
        <activity android:name="com.sunny.sample.activities.production.TradeActivity"/>
        <activity android:name="com.sunny.sample.activities.production.BuyResultActivity"/>

    </application>

</manifest>